<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="ltd.newbee.mall.newbeemall.dao.ShoppingCartItemMapper">
	<!--dao层mapper，java文件名 -->

	<select id="getShoppingCart"
		resultType="ltd.newbee.mall.newbeemall.entity.TbNewbeeMallShoppingCartItem">
		<!--id是mapper的方法名，resultType是指定的返回类型 -->
		select *
		from tb_newbee_mall_shopping_cart_item as i
		join sku as s
		on i.sku_id=s.sku_id
		where user_id=1;
	</select>
	<!--todo中插入数据 -->
	<insert id="insertProduct">
		INSERT INTO tb_newbee_mall_shopping_cart_item
		(user_id,goods_id,goods_count,is_deleted,create_time,update_time,goods_name,sku_id)
		VALUES
		(
		#{userId},#{goodsId},#{goodsCount},#{isDeleted},#{createTime},#{updateTime},#{goodsName},#{skuId});
	</insert>

	<update id="chageCount">
		update tb_newbee_mall_shopping_cart_item
		set
		goods_count =#{goodsCount}
		where cart_item_id=#{cartItemId};
	</update>
	


	<delete id="deleteProduct">
		delete from tb_newbee_mall_shopping_cart_item where
		cart_item_id=#{cartItemId}
	</delete>
</mapper>

